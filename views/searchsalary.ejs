<section class="section">
    <div class="container">
        <div class="row">
        <h4 class="center-align">Search Salary</h4>

        <div class="row">
            <form class="col s12" action="/salary/searchdetails" method="POST">
              <div class="row">
                <div class="input-field col s4">
                    <i class="material-icons prefix">local_atm</i>
                    <input id="icon_prefix" name="salarydetails" type="number" class="validate" required autocomplete="off">
                  <label for="icon_prefix">Enter Salary</label>
                </div>
                <div class="input-field col s4">
                    <i class="material-icons prefix">filter_list</i>
                    <select name="opt" required>
                      <option value="" disabled selected>Choose your option</option>
                      <option  value="$gt">Greater than</option>
                      <option  value="$lt">Less than</option>
                    </select>
                    <label>Filter</label>
                  </div>
                <div class="input-field col s4">
                    <input id="btn" 
                    name="commit" 
                    type="submit" 
                    value="Search" 
                    class="btn btn-small deep-purple white-text"
                    style="text-transform: capitalize;letter-spacing: 2px;"
                    >

                  </div>
              </div>
            </form>
          </div>

          </div>

          <table class="striped centered responsive-table">
            <thead>
              <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Salary</th>
              </tr>
            </thead>
    
            <tbody>
              <%- include ('./partials/salarytable') %>
            </tbody>
          </table>
        </div>
</section>